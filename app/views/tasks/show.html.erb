<h2><%= @task.id %>. <%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p>
  <%= link_to "back", tasks_path %>
  <%= link_to "edit", edit_task_path %>
  <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</p>
